rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own books
    match /users/{userId}/books/{bookId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write status options
    match /statusOptions/{statusId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write series
    match /series/{seriesId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write tags
    match /tags/{tagId} {
      allow read, write: if request.auth != null;
    }
  }
} 