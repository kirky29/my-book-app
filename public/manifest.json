{
  "name": "Book Tracker - Personal Library",
  "short_name": "BookTracker",
  "description": "Track your book collection, wishlist, and reading progress with style",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "fullscreen"],
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["books", "productivity", "lifestyle"],
  "lang": "en",
  "edge_side_panel": {
    "preferred_width": 412
  },
  "shortcuts": [
    {
      "name": "Add Book",
      "short_name": "Add",
      "description": "Add a new book to your library",
      "url": "/?action=add",
      "icons": [
        {
          "src": "/book-icon.svg",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Scan Barcode",
      "short_name": "Scan",
      "description": "Scan book barcode",
      "url": "/?action=scan",
      "icons": [
        {
          "src": "/book-icon.svg",
          "sizes": "192x192"
        }
      ]
    }
  ],
